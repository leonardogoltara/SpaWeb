@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Not Found";
}
<section class="content-header">
    <h1></h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="register-box">
        <div class="register-box-body">
            <div class="error-page">
                <h2 class="headline text-red">404</h2>

                <div class="error-content">
                    <h3><i class="fa fa-warning text-red"></i> Página não encontrada</h3>

                    <p>
                        Esta página que você procura não foi encontrada. Por favor, tente novamente.<br>
                        Se o problema persistir, entre em contato com o suporte.
                    </p>

                    <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">Home</a>
                </div>
            </div>
        </div>
    </div>
</section>