@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Erro";
}
<section class="content-header">
    <h1></h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="register-box">
        <div class="register-box-body">
            <div class="error-page">
                <h2 class="headline text-red">500</h2>

                <div class="error-content">
                    <h3><i class="fa fa-warning text-red"></i> Oops! Tivemos um problema</h3>
                    <h4>Detalhes Tecnicos</h4>
                    <p>
                        @HttpContext.Current.Session["message"].ToString())
                    </p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-default" role="button">Home</a>
                </div>
            </div>
        </div>
    </div>
</section>
